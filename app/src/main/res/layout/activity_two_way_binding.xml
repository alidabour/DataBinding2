<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        tools:context="com.viralcorners.databinding.twoway.TwoWayBindingActivity">

        <fragment
            android:id="@+id/edit_fragment"
            android:name="com.viralcorners.databinding.twoway.EditFragment"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
        <fragment
            android:id="@+id/viewing_fragment"
            android:name="com.viralcorners.databinding.twoway.ViewingFragment"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>
    </LinearLayout>
</layout>